{% extends "base.twig" %}
{% block pagetitle %}Ajout d'une Annonce
{% endblock %}
{% set compteur=1 %}

{% block header %}
	<navbar baseurl="http://localhost/projet4/dev/">
		<a href="http://localhost/projet4/dev/">LOGO</a>
		<span>SLOGAN</span>
		<a href="http://localhost/projet4/dev/">RETOUR</a>
	</navbar>
{% endblock %}

{% block recherche %}{% endblock %}
{% block body %} 
	<form action="" method="post">
		<div class="card">
			<label for="titre">Titre: </label>
			<input type="text" name="titre" id="titre" placeholder="Titre de l'annonce" required>
			<label for="categorie">Catégorie: </label>
			<input type="text" name="categorie" id="catégorie" placeholder="categorie" required>
			<label for="prix">Prix: </label>
			<input type="float" name="prix" id="prix" placeholder="prix" required>
			
		</div>
		<div class="card"></div>
		<label for="description">Description:</label>
			<textarea type="description" name="description" id="description">Description de l'annonce</textarea>
			<label for="mail">Email: </label>
			<input type="mail" name="mail" id="mail" placeholder="email pour vous joindre" required>
		</div>
		
		<div class="container">
			<div class="card">
				<label for="Photo1">Photo: </label>
				<input type="file" name="photo01" id="photo01">
			</div>
			<div class="card">
				<label for="Photo2">Photo: </label>
				<input type="file" name="photo02" id="photo02">
			</div>
		<div class="card">
			<label for="Photo3">Photo: </label>
			<input type="file" name="photo03" id="photo03">
		</div>
		<div class="card">
			<label for="Photo4">Photo: </label>
			<input type="file" name="photo04" id="photo04">
		</div>
		<div class="card">
			<label for="Photo5">Photo: </label>
			<input type="file" name="photo05" id="photo05">
		</div>
		<div class="button">
			<button type="submit">Envoyer</button>
			<button type="reset">Annuler</button>
		</div>
	</form>
	</div>
{% endblock %}
{% block footer %}
	<footer></footer>
{% endblock %}

